<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>Cairo_Analyzer_Test</id>
    <name>Cairo Analyzer test</name>
    <vendor>0.0.1</vendor>

    <depends>com.intellij.modules.ultimate</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <description> this is a test plugin for cairo in intellij </description>

    <!--    <resource-bundle>messages.MyBundle 111111111</resource-bundle>-->

    <extensions defaultExtensionNs="com.intellij">
        <!-- LSP -->
        <platform.lsp.serverSupportProvider implementation="FooLspServerSupportProvider"/>

        <!-- fileType -->
        <fileType
                name="Cairo File"
                implementationClass="cairoplugin.language.CairoFileType"
                fieldName="INSTANCE"
                language="Cairo"
                extensions="cairo"/>

        <!-- Parser -->
        <lang.parserDefinition
                language="Cairo"
                implementationClass="cairoplugin.language.CairoParserDefinition"/>

        <!-- high light -->
        <lang.syntaxHighlighterFactory
                language="Cairo"
                implementationClass="cairoplugin.language.CairoSyntaxHighlighterFactory"/>




<!--        <toolWindow id="YourToolWindowId" anchor="bottom" secondary="true" factoryClass="YourToolWindowFactory"/>-->
    </extensions>

</idea-plugin>
